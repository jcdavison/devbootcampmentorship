.row
  .large-10.columns.large-centered
    %h3.subheader
      %a
        Welcome to Dev BootCamp's Cohorts
  .large-10.columns.large-centered.panel
    .row
      = render "layouts/commitment_tool"
    - @cohorts.each do |c|
      .row
        .large-2.columns.subheader.centered
          = link_to c.name, cohort_path(c)
        .large-2.columns.subheader.centered
          = c.start_date.to_date
        .large-2.columns.subheader.centered
          = c.end_date.to_date
        .large-3.columns.subheader.centered
          M #{c.mentors.count} B #{c.boots.count} 
        .large-3.columns.subheader.centered
  .large-10.columns.large-centered.panel
    .row
      = render "layouts/new_cohort"
