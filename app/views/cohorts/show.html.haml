.row
  .large-10.columns.large-centered.panel
    .row
      .large-9.columns
        %h3.subheader.centered.inline
          %a
            =@cohort.name.capitalize
        %h6.subheader.centered.inline
          start: 
          %a
            = @cohort.start_date
        %h6.subheader.centered.inline
          graduation: 
          %a
            = @cohort.end_date
      .large-3.columns
        = link_to "Notify All Pairs!", "#", class: "button tiny radius success margin-top"
    .row
      = render "layouts/pairing_tool"
    .row
      .large-12.columns.large-centered
        %h3.subheader
          %a
            Mentors
            (#{@cohort.mentors.count})
        - @cohort.mentors.each do |mentor|
          .row
            .large-11.columns.large-offset-1
              .row
                .large-4.columns
                  #{mentor.first_name} #{mentor.last_name}
                .large-4.columns
                  = mail_to mentor.email
                .large-4.columns
                  = mentor.pairings.count
        %h3.subheader
          %a
            Boots
            (#{@cohort.boots.count})
        - @cohort.boots.each do |boot|
          .row
            .large-11.columns.large-offset-1
              .row
                .large-4.columns
                  #{boot.first_name} #{boot.last_name}
                .large-4.columns
                  = mail_to boot.email
                .large-1.columns
                  = boot.pairings.count
              - if boot.pairings
                .row
                  .large-8.columns.large-centered
                    .ul.no-bullet
                      - boot.pairings.each do |pair|
                        %li
                          = User.find(pair.mentor.id).full_name
                          | 
                          = User.find(pair.mentor.id).email
=render "layouts/notification_modal"
