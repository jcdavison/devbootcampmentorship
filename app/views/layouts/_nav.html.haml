%nav.top-bar
  %ul.title-area
    %li.name
      %h1 
        = link_to "TheBootBook", "#"
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        menu
  %section.top-bar-section
    %ul.right
      - if logged_in?
        %li
          %a
            Welcome #{current_user.first_name}
